
@{
    Layout = null;
}

<!DOCTYPE html>
@model DrinkDBModel.DrinkInfo

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>饮品信息编辑</title>
    <link href="~/Bootstrap资源/css/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Bootstrap资源/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/Bootstrap资源/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-10 col-sm-offset-1 col-md-offset-3">
                <form method="post" action="Edit" enctype="multipart/form-data">
                    <h2 class="text-center">饮品信息编辑</h2>
                    <br />
                    <div class="form-group">
                        <input name="url" hidden value="/DrinkDB/DrinkXT" />
                        <div class="col-md-4 col-sm-4" style="line-height:34px;">
                            <font style="font-size:18px"><strong>饮品名称：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <input type="hidden" name="DrinkID" value="@Model.DrinkID" />
                            <input type="text" name="DrinkName" class="form-control" value="@Model.DrinkName" required="" placeholder="请输入饮品名称" />
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4">
                            <font style="font-size:18px"><strong>饮品图片：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <input type="file"  name="uploadFileName" value="上传图片" required="" />
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4" style="line-height:34px;">
                            <font style="font-size:18px"><strong>饮品简介：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <textarea type="text" cols="25" rows="5" name="DrinkMesg" class="form-control" value="@Model.DrinkMesg" required="" placeholder="请输入饮品简介">@Model.DrinkMesg</textarea>
                            <br />
                        </div>  
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4" style="line-height:34px;">
                            <font style="font-size:18px"><strong>备注：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <textarea type="text" cols="25" rows="5" name="Remark" class="form-control" value="@Model.Remark" placeholder="请输入饮品简介">@Model.Remark</textarea>
                            <br />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4" style="line-height:34px;">
                            <font style="font-size:18px"><strong>类型名称：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.DropDownList("TypeID", null,"请选择", new { @class = "form-control"})
                            <br />
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-success">保存</button>
                        <a href="@ViewBag.URL" class="btn btn-primary ">退出</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
