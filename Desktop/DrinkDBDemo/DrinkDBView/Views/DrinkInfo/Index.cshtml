
@{
    ViewBag.Title = "Index";
    Layout = null;
}

@model List<DrinkDBModel.DrinkInfo>

<style>
    table > thead > tr > th {
        text-align: center;
    }
</style>
<link href="~/Bootstrap资源/css/bootstrap.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/Bootstrap资源/js/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="~/Bootstrap资源/js/bootstrap.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1" >
            <form method="post" action="/DrinkInfo/Index">
                <table class="table table-striped table-bordered text-center">
                    <caption>
                        <h3 class="text-center">饮品信息表</h3>
                        <br />
                        <div class="row">
                            <div class="input-group col-md-3 pull-left" style="padding:0;">
                                @Html.DropDownList("TypeID", null, "请选择", new { @class = "form-control" })
                            </div>
                            <div class="input-group">
                                <input type="text" name="DrinkName" class="form-control" placeholder="请输入饮品名称" value="@ViewBag.DrinkName" >
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-success">查询</button>
                                </span>
                                <span class="input-group-btn">
                                    <a href="/DrinkInfo/Edit" class="btn btn-danger">新增</a>
                                </span>
                            </div>
                        </div>
                    </caption>
                    <thead>
                        <tr>
                            <th class="col-md-1">饮品编号</th>
                            <th>饮品图片</th>
                            <th class="col-md-1">饮品名称</th>
                            <th class="col-md-4">饮品简介</th>
                            <th class="col-md-4">备注</th>
                            <th class="col-md-1">所属饮品类型</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var itme in Model)
                        {
                            <tr>
                                <td>@itme.DrinkID</td>
                                <td>
                                    <img src="~/img/DrinkInfoIMG/@itme.Drinkimg " width="80" />
                                </td>
                                <td>@itme.DrinkName</td>
                                <td>@itme.DrinkMesg</td>
                                <td>@itme.Remark</td>
                                <td>@itme.DrinkType.TypeName</td>
                                <td>
                                    <a href="/DrinkInfo/Edit?DrinkID=@itme.DrinkID" class="btn btn-info btn-sm">修改</a>
                                    <a href="/DrinkInfo/Delete?DrinkID=@itme.DrinkID" onclick="return confirm('你确定要删除吗？')" class="btn btn-warning btn-sm">删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
            <div class="text-center col-md-12">
                <a href="/DrinkDB/XTguanli" class="pull-right text-center">返回科普管理</a>
            </div>
            @Html.Partial("~/Views/Shared/_fenye.cshtml");
        </div>
    </div>
</div>

