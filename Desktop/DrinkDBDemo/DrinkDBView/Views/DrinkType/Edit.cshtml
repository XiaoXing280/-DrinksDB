
@{
    Layout = null;
}

<!DOCTYPE html>

@model DrinkDBModel.DrinkType

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Bootstrap资源/css/bootstrap.min.css" rel="stylesheet" />
    <title>饮品类型编辑</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form method="post" action="Edit">
                    <h2 class="text-center">饮品类型编辑</h2>
                    <br />
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4" style="line-height:34px;">
                            <font style="font-size:18px"><strong>饮品类型名称：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <input type="hidden" name="TypeID" value="@Model.TypeID" />
                            <input type="text" name="TypeName" class="form-control text-center" value="@Model.TypeName" placeholder="请输入饮品类型名称" required="" />                          
                            <br />
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-success">保存</button>
                        <a href="Index" class="btn btn-primary ">退出</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
