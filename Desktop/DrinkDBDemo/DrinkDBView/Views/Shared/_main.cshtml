
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Bootstrap资源/css/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Bootstrap资源/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/Bootstrap资源/js/bootstrap.min.js"></script>
    <title>饮品信息科普网</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        #main {
            margin: 0 auto;
            width: 1050px;
        }

        #top {
            width: 100%;
            height: 74px;
        }

        #top1 {
            width: 300px;
            height: 75px;
            float: left;
        }

        #top img {
            width: 280px;
            height: 72px;
            margin-left: 5px;
        }

        #top2 {
            width: 420px;
            height: 75px;
            line-height: 75px;
            margin-left: 5px;
            float: left;
            color: orangered;
            font-size: 30px;
            text-align: center;
        }

        #top3 {
            float: right;
            width: 300px;
            height: 75px;
            line-height: 75px;
            color: #0094ff;
            font-size: 20px;
            text-align: center;
        }

        #middle {
            width: 1050px;
            height: 42px;
            background-color: lightgreen;
        }

            #middle ul {
                width: 100%;
            }

            #middle li {
                float: left;
                list-style: none;
                width: 145px;
                height: 42px;
                margin-left: 4px;
                line-height: 40px;
                text-align: center;
                font-family: "楷体";
            }

                #middle li:hover {
                    background-color: greenyellow;
                }

                #middle li a {
                    color: white;
                    font-size: 25px;
                    font-weight: bold;
                    text-decoration: none;
                }

                    #middle li a:hover {
                        color: blue;
                    }

        #banquan {
            margin: auto;
            text-align: center;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div>
        <form id="form1" runat="server">
            <div id="main">
                <div id="top">
                    <div id="top1">
                        <img src="~/img/top1.png" />
                    </div>
                    <div id="top2"><asp:Label runat="server" ID="lblMess1">饮品科普，你值得信赖！</asp:Label></div>
                    <div id="top3">
                        <asp:Label runat="server" id="lblNum" style="color:blue">@ViewBag.Text</asp:Label>
                        <a href="Login"><asp:Label runat="server">退出</asp:Label></a>
                    </div>
                </div>
                <div id="middle">
                    <ul>
                        <li><a href="Main">首页</a></li>
                        <li><a href="News">饮品新时代</a></li>
                        <li><a href="DrinkXT">饮品科普</a></li>
                        <li><a href="XTguanli">科普管理</a></li>
                        <li><a href="jianjie">关于我们</a></li>
                        <li class="pull-right"><a href="Register">注册</a></li>
                        <li class="pull-right"><a href="Login">登录</a></li>
                    </ul>
                </div>
                <div>
                    @RenderBody()
                </div>
                <div id="banquan">
                    <nav class="navbar navbar-default navbar-fixed-bottom" style="width:1050px;margin:0 auto;">
                        饮品科普网有限公司版权所有  备案号：湘XXXXXXXXXXX
                        <br />
                        请联系 QQ：123456789  VX：YPKPW123
                    </nav>
                </div>
            </div>
        </form>
    </div>
</body>
</html>


