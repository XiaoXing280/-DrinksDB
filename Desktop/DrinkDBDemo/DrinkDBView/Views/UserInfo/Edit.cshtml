
@{
    Layout = null;
}

<!DOCTYPE html>
@model DrinkDBModel.UserInfo

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Bootstrap资源/css/bootstrap.min.css" rel="stylesheet" />
    <title>用户编辑</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <form method="post" action="Edit">
                    <h2 class="text-center">用户编辑</h2>
                    <br />
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4 text-center" style="line-height:34px;">
                            <font style="font-size:18px"><strong>用户账号：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <input type="hidden" name="UserID" value="@Model.UserID" />
                            <input type="text" name="UserNum" class="form-control" value="@Model.UserNum" placeholder="请输入账号" required="" />
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4 text-center" style="line-height:34px;">
                            <font style="font-size:18px"><strong>用户姓名：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" name="UserName" class="form-control" value="@Model.UserName" placeholder="请输入姓名" required=""/>
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4 text-center" style="line-height:34px;">
                            <font style="font-size:18px"><strong>用户密码：</strong></font>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <input type="text" name="UserPwd" class="form-control" value="@Model.UserPwd" placeholder="请输入密码" required=""/>
                            <br />
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-success">保存</button>
                        <a href="Index" class="btn btn-primary ">退出</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
