
@{
    ViewBag.Title = "Index";
    Layout = null;
}

@model List<DrinkDBModel.UserInfo>

<style>
    table > thead > tr > th {
        text-align: center;
    }
</style>
<link href="~/Bootstrap资源/css/bootstrap.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/Bootstrap资源/js/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="~/Bootstrap资源/js/bootstrap.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form method="post" action="/UserInfo/Index">
                <table class="table table-striped table-bordered text-center">
                    <caption>
                        <h3 class="text-center">用户信息表</h3>
                        <br />
                        <div class="input-group">
                            <input type="text" name="UserNum" class="form-control" placeholder="请输入用户账号" value="@ViewBag.UserNum">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-success">查询</button>
                            </span>
                            <span class="input-group-btn">
                                <a href="/UserInfo/Edit" class="btn btn-danger">新增</a>
                            </span>
                        </div>
                    </caption>
                    <thead>
                        <tr>
                            <th>用户id</th>
                            <th>用户账号</th>
                            <th>用户姓名</th>
                            <th>用户密码</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var itme in Model)
                        {
                            <tr>
                                <td>@itme.UserID</td>
                                <td>@itme.UserNum</td>
                                <td>@itme.UserName</td>
                                <td>@itme.UserPwd</td>
                                <td>
                                    <a href="/UserInfo/Edit?UserID=@itme.UserID" class="btn btn-info btn-sm">修改</a>
                                    <a href="/UserInfo/Delete?UserID=@itme.UserID" onclick="return confirm('你确定要删除吗？')" class="btn btn-warning btn-sm">删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
            <div class="text-center col-md-12">
                <a href="/DrinkDB/XTguanli" class="pull-right text-center">返回科普管理</a>
            </div>
            @Html.Partial("~/Views/Shared/_fenye.cshtml");
        </div>
    </div>
</div>

